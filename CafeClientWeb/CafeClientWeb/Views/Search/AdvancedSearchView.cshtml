                        </p>
                    </div>
                </div>
            </div>
            <div class="products-right-grids-bottom">
                <div class="col-md-4 products-right-grids-bottom-grid">
                    @for (int i = 0; i < ViewBag.Column1; i++)
                    {
                        int SanPhamID = db.SANPHAM.Where(x => x.LOAISP_ID == Model[i].ID).FirstOrDefault().ID;
